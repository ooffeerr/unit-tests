<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
				tools:context=".MainActivity">

	<TextView
			android:text="@string/best_calculator_ever"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/textView"/>

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/number_1"
			android:layout_below="@+id/textView"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="29dp"
			android:hint="@string/number_1_placeholder"/>

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/number_2"
			android:layout_below="@+id/number_1"
			android:layout_centerHorizontal="true"
			android:hint="@string/number_2_placeholder"/>

	<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="X"
			android:id="@+id/multiply"
			android:layout_below="@+id/number_2"
			android:layout_alignLeft="@+id/number_2"
			android:layout_alignStart="@+id/number_2"/>

	<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Slowwwww +"
			android:id="@+id/slow_add"
			android:layout_below="@+id/number_2"
			android:layout_alignRight="@+id/number_2"
			android:layout_alignEnd="@+id/number_2"/>

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/result"
			android:layout_below="@+id/multiply"
			android:layout_alignLeft="@+id/multiply"
			android:layout_alignStart="@+id/multiply"
			android:focusable="false"/>
</RelativeLayout>
